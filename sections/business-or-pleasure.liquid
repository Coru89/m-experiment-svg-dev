      font-size: clamp({{ block.settings.subheading_font_size_mobile }}px, .5rem + .5vw, {{ block.settings.subheading_font_size_desktop }}px);

      {% if block.settings.subheading_border == true %}
        margin-top: calc({{ block.settings.nudge_subheading_y-axis_mobile }}rem + {{ block.settings.subheading_border_padding }}px);
      {% else %}
        margin-top: {{ block.settings.nudge_subheading_y-axis_mobile }}rem;
      {% endif %}
   
      color: rgb(var(--heading-color));
      position: relative;

      {% if block.settings.content_position_mobile == "top-center" or block.settings.content_position_mobile == "bottom-center" or block.settings.content_position_mobile == "middle-center" %}
        margin: auto;
      {% endif %}
      margin-bottom: 0;

      {% if block.settings.subheading_uppercase == true %}
        text-transform: uppercase;
      {% endif %}
      {% if block.settings.subheading_bold == true %}
        font-weight: 500;
      {% endif %}
      {% if block.settings.heading_drop_shadow == true %}
        filter: drop-shadow({{ block.settings.heading_drop_shadow_x-offset }}px {{ block.settings.heading_drop_shadow_y-offset }}px 6px {{ dropShadowColor }});
      {% endif %}
    }

    #block-{{ section.id }}-{{ block.id }} .subheading a {
      border-bottom: 1px solid;
      padding-bottom: 2px;
      position: relative;
      z-index: 1;
    }

    {% if  block.settings.subheading_border == true %}
