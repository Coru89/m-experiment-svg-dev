        {% endif %}

        {% if font_scale_subheading == 'default' %}
          font-size: clamp({{ block.settings.subheading_font_size_mobile }}px, .09vw + 1rem, {{ block.settings.subheading_font_size_desktop }}px);
        {% endif %}

        {% if font_scale_subheading == 'slower' %}
          font-size: clamp({{ block.settings.subheading_font_size_mobile }}px, .4vw + 1rem, {{ block.settings.subheading_font_size_desktop }}px);
