        letter-spacing: 0.5px;
        {% if font_scale_subheading == 'faster' %}
          font-size: clamp({{ block.settings.subheading_font_size_mobile }}px, .3vw + 1rem, {{ block.settings.subheading_font_size_desktop }}px);
