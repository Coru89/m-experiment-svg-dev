    @media screen and (min-width: 1200px) {
       #block-{{ section.id }}-{{ block.id }} .heading {
        {% if block.settings.font_scale == 'faster' %}
            font-size: clamp({{ block.settings.heading_font_size_mobile }}px, 3vw + 1rem, {{ block.settings.heading_font_size_desktop }}px);
        {% endif %}
