    }
  
    @media screen and (min-width: 1680px) {
       #block-{{ section.id }}-{{ block.id }} .heading {
          font-size: clamp({{ block.settings.heading_font_size_mobile }}px, 9.5vw + 1rem, {{ block.settings.heading_font_size_desktop }}px);
      }
    }

    {% if block.settings.font_scale_subheading == "unset" %}
      {%- assign font_scale_subheading = block.settings.font_scale -%}
    {% else %}
      {%- assign font_scale_subheading = block.settings.font_scale_subheading -%}
    {% endif %}

