        {% endif %}
      }
    }
  
    @media screen and (min-width: 1440px) {
       #block-{{ section.id }}-{{ block.id }} .heading {
        {% if block.settings.font_scale == 'faster' %}
          font-size: clamp({{ block.settings.heading_font_size_mobile }}px, 5vw + 1rem, {{ block.settings.heading_font_size_desktop }}px);
        {% endif %}
        {% if block.settings.font_scale == 'default' %}
          font-size: clamp({{ block.settings.heading_font_size_mobile }}px, 6.25vw + 1rem, {{ block.settings.heading_font_size_desktop }}px);
        {% endif %}
        {% if block.settings.font_scale == 'slower' %}
          font-size: clamp({{ block.settings.heading_font_size_mobile }}px, 9vw + 1rem, {{ block.settings.heading_font_size_desktop }}px);
        {% endif %}
